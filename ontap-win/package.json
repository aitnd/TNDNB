{
  "name": "dao-tao-thuyen-vien",
  "private": true,
  "version": "3.8.8",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "concurrently \"cross-env BROWSER=none ELECTRON_MODE=true npm run dev\" \"wait-on http://127.0.0.1:5173 && cross-env ELECTRON_MODE=true electron .\"",
    "electron:build": "cross-env ELECTRON_BUILD=true vite build && electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "2",
    "@vitejs/plugin-react": "^5.0.0",
    "cors": "^2.8.5",
    "dexie": "^4.2.1",
    "dotenv": "^17.2.3",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^5.3.0",
    "express": "^5.2.1",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-fast-marquee": "^1.6.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.2",
    "react-virtuoso": "^4.17.0",
    "recharts": "^3.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "sweetalert2": "^11.26.4",
    "vite": "^6.2.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "21.4.4",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.horizon.daotaothuyenvien",
    "productName": "Ôn thi đường thủy",
    "artifactName": "Onthi-${version}-Setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/question_images",
        "to": "question_images",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/assets/img/logo1.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "include": "electron/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "aitnd",
      "repo": "TNDNB"
    }
  }
}